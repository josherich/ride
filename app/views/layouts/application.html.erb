<!DOCTYPE html>
<html>
  <head>
    <title><%= @title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Ride" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Ride" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>


    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body class="<%= controller_name %> <%= action_name %>">
    <div class="container">
      <%= render 'layouts/header' %>
      <section class="content">
        <% flash.each do |key, value| %>
        <div class="flash <%= key %>"><%= value %></div>
        <% end %>
        <p class="notice"><%= notice %></p>
        <!-- <p class="alert"><%= alert %></p> -->
        <%= yield %>
      </section>
      <%= render 'layouts/mailbox' %>
      <%= render 'layouts/dashboard' %>
      <%= render 'layouts/footer' %>
      <%= debug(params) if Rails.env.development? %>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
    <script type="text/javascript" src="http://api.map.baidu.com/api?v=1.3"></script>
    <%= javascript_include_tag "application.js" %>
    <%= javascript_include_tag "homepage.js" %>
  </body>
</html>