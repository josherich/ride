<div class="scroll_table">
  <table class="table table-hover chat_table">
    <thead>
      <tr>
        <th>id</th>
        <th>subject</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @conversations.each do |con| %>
      <tr>
        <td><%= con.id %></td>
        <td><%= con.subject %></td>
        <td><%= link_to '->', con, :remote => true %></td>
        <td><%= link_to 'x', con, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

