= div_for(route_record, :class => "route_block") do
	.route_info
		.from
			%p
				= route_record.from
		.to
			%p
				= route_record.to
		.set_date
			出发日期：
			%p
				= route_record.set_date
		.set_time
			出发时刻：
			%p
				= route_record.set_time
		- if route_record.freq_pattern == 2
			.freq_regular
				%p
					周一至周五
		- else
			.freq_single
				%p
					单次线路
		.t_length
			%p
				= route_record.timespan
			分钟后到达
		.price
			座位单价：
			%p
				= route_record.price
			/ = route_record.id
		.seat_stat
			座位情况：
			%p
				= seats_text(route_record.seat_stat)
			.progress
				.bar(style="width:#{seats_bar(route_record.seat_stat)}%")
		.lat_s.hidden
			%p
				= route_record.lat_s
		.lng_s.hidden
			%p
				= route_record.lng_s
		.lat_d.hidden
			%p
				= route_record.lat_d
		.lng_d.hidden
			%p
				= route_record.lng_d
	.route_action
		/ = link_to(requestors_route_record_path(route_record), :remote => true) do
		/ 	%button.btn#view-btn
		/ 		查看请求
		/ = link_to(route_record_path(route_record), :method => :delete, :remote => true) do	
		/ 	%button.btn#del-btn
		/ 		删除
			