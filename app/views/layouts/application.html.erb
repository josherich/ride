<!DOCTYPE html>
<html>
  <head>
    <title><%= @title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Ride" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body class="<%= controller_name %> <%= action_name %>">
    <div class="container">

      <%= render 'layouts/header' %>
      <%= render 'layouts/mailbox' %>
      <%= render 'layouts/dashboard' %>

      <section class="content">
        <% if flash[:notice] %>
          <p class="notice"><%= flash[:notice] %></p>
        <% end %>
        <% if flash[:error] %>
          <p class="error"><%= flash[:error] %></p>
        <% end %>
        
        <%= yield %>
      </section>

      <div class="debug">
      <%= debug(params) if Rails.env.development? %>
        
      </div>
    
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
    <script type="text/javascript" src="http://api.map.baidu.com/api?v=1.5&ak=C2df5fe6473c55b49b33f37c30783c16"></script>
    <%= javascript_include_tag "application.js" %>

  </body>
</html>